{
  "name": "@mindfulness/utils",
  "version": "1.5.0",
  "description": "Mindfulness.com shared typescript utils",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start:linting": "chokidar \"src\" -d 5000 -t 15000 -c \"npm run lint\"",
    "start:tests": "chokidar \"src\" -d 5000 -t 15000 -c \"jest -o\"",
    "build": "tsc && npm run doc",
    "prepublishOnly": "chmod 755 ./publish.sh && ./publish.sh",
    "postinstall": "[ -d './src' ] || cp -rf ./dist/* ./",
    "test": "TZ=UTC jest --maxWorkers=2",
    "test:one": "TZ=UTC jest --watch",
    "lint": "eslint -c ./.eslintrc \"src/**/*.ts\"",
    "lint:fix": "eslint -c ./.eslintrc \"src/**/*.ts\" --fix",
    "doc": "typedoc ./src/index.ts",
    "changelog": "npx commit-and-tag-version --skip.commit --skip.tag --skip.bump",
    "version": "npx commit-and-tag-version"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:mindfulness-com/mcom-utils.git"
  },
  "keywords": [
    "typescript",
    "graphql",
    "node",
    "api"
  ],
  "engines": {
    "node": ">=16"
  },
  "author": "Mindfulness.com",
  "license": "ISC",
  "dependencies": {
    "bluebird": "3.7.2",
    "change-case": "4.1.2",
    "compare-versions": "6.1.0",
    "date-fns": "3.4.0",
    "date-fns-timezone": "0.1.4",
    "dotenv": "16.4.5",
    "lodash": "4.17.21",
    "memoizee": "0.4.15",
    "microseconds": "0.2.0",
    "nanoid": "3.3.7",
    "pg-escape": "0.2.0",
    "query-string": "7.1.3",
    "timezone-support": "3.1.0",
    "to-time": "1.0.2",
    "uuid": "9.0.1"
  },
  "devDependencies": {
    "@types/bluebird": "3.5.42",
    "@types/jest": "29.5.12",
    "@types/lodash": "4.17.0",
    "@types/memoizee": "0.4.11",
    "@types/microseconds": "0.2.2",
    "@types/mock-require": "2.0.3",
    "@types/pg-escape": "0.2.3",
    "@types/uuid": "9.0.8",
    "@typescript-eslint/eslint-plugin": "7.4.0",
    "@typescript-eslint/parser": "7.4.0",
    "chokidar-cli": "3.0.0",
    "commit-and-tag-version": "11.3.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-prettier": "5.1.3",
    "jest": "29.7.0",
    "npm-run-all": "4.1.5",
    "prettier": "3.2.5",
    "ts-deferred": "1.0.4",
    "ts-jest": "29.1.2",
    "ts-node": "10.9.2",
    "typedoc": "0.25.12",
    "typescript": "5.4.3"
  }
}
