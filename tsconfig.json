{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "sourceMap": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["es2015"]
  },
  "include": ["src/**/*"],
  "files": ["src/global.d.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
